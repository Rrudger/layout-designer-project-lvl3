-
  var messages = [
    {
      name: "Вениамин Редакторович",
      text: "Да, я уже вышел и минут через 20-30 буду у тебя. Поеду на трамвае и потом в магазин. Тебе что-то захватить?",
      time: "8 минут назад",
    },

    {
      name: "Кодовёнок Хекслетович",
      text: "Захвати мне колы и пару печенек. Как-то очень сладкого хочется, а в магазин идти лень",
      time: "5 минут назад",
    },

    {
      name: "Кодовёнок Хекслетович",
      text: "А, слушай, купи мне ещё Macbook Pro. А то хочется работать в Хекслете, а там это условие",
      time: "3 минуты назад",
    },
    
    {
      name: "Вениамин Редакторович",
      text: "о_О",
      time: "Только что",
    },
  ]
  
include mixins.pug

.d-flex.sticky-top.bg-white
  .d-flex.flex-row.w-100.me-4.mt-4.pb-3.border-bottom.border-gray
    .d-flex.align-items-center
      img.img-h-50.ps-3.pe-4.rounded-circle(src='../src/images/avatar_4.jpg', alt="аватар") 
    .div
      h6.fw-bold.text-dark "Вениамин Редакторович"
      small.text-muted "Онлайн"


each message in messages
  if message.name=="Кодовёнок Хекслетович"
    .d-flex.justify-content-end.mt-5.mb-5
      .d-flex.flex-row.align-items-end.w-75
        .d-flex.align-items-center
          +getAvatar(message.name, "img-h-50 rounded-circle shadow-sm")
        .bg-primary.shadow-sm.container-border-16.p-4
          .text-light.border-bottom.border-light.pb-2= message.text
          small.text-gray= message.time
  else
    .d-flex.mb-5
      .d-flex.flex-row.align-items-end.w-75
        .d-flex.align-items-center
          +getAvatar(message.name,"img-h-50 rounded-circle shadow-sm") 
        .bg-light.shadow-sm.container-border-16.p-4
          h6.fw-bold.text-dark= message.name
          .text-muted.pb-2= message.text
          small.text-muted= message.time

form.chat-form.d-flex.justify-content-between.border-top.border-grey.bg-white.p-3.position-sticky.bottom-0.end-0
  input.shadow-none.input-form.form-control.text-secondary.ps-4.pb-3.mt-3(
    type="text"
    placeholder= "Напишите сообщение...")
  img.rounded-circle.img-h-50.bg-primary.p-2(src="../src/images/icons/cursor.svg", alt="курсор")
