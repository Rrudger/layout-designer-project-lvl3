include mixins.pug
+search("Контакты", "поиск по контактам")

div
  each contact, letter in contacts
    h3.display-6.text-muted.pt-5.mb-3= letter
    each person in contact
      .contact.d-flex.flex-row.me-4.mt-4.pb-3.border-bottom.border-gray
        .avatar.d-flex.align-items-center
          img.img-h-50.ps-3.pe-4.rounded-circle(src='../src' + person.avatar, alt=person.name + " аватар") 
        .person-data
          h6.fw-bold.text-dark= person.name
          small.text-muted= person.status
