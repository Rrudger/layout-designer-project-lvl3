include mixins.pug
+search("Контакты", "Поиск по контактам")

div
  each contact, letter in contacts
    h3.display-6.text-muted.pt-5.mb-4= letter
    each person in contact
      .contact.d-flex.me-4.mt-3.shadow-sm
        a(href="#").d-flex.align-items-center.pb-3.pt-3.ps-3.w-100
          +getAvatar(person.name,"avatar img-h-50 rounded-circle")
          .w-100.ps-4
            h6.fw-bold.text-dark.mb-0= person.name
            small.text-muted= person.status
